<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/mcheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:paddingStart="8dp"
            android:text="This is task 1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_alert"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/btn_share"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_add_alert_24"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/share_24px"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline: 2024-11-30"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:layout_below="@id/mcheckbox"
            android:layout_marginTop="4dp"
            android:layout_alignStart="@id/mcheckbox" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
